@model AnnouncementsBoard.Frontend.Domain.DTO.CreateAnnouncementDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var categories = ViewBag.Categories as List<string>;
}

<h2>Створення Оголошення</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Назва Оголошення</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Опис</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Вибір категорії -->
    <div class="form-group">
        <label for="Category">Категорія</label>
        <select id="category" asp-for="Category" class="form-control" onchange="populateSubcategories()">
            <option value="">-- Оберіть категорію --</option>
            @foreach (var category in categories)
            {
                <option value="@category">@category</option>
            }
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <!-- Вибір підкатегорії -->
    <div class="form-group">
        <label for="SubCategory">Підкатегорія</label>
        <select id="subcategory" asp-for="SubCategory" class="form-control" disabled>
            <option value="">-- Оберіть підкатегорію --</option>
        </select>
        <span asp-validation-for="SubCategory" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Підтвердити</button>
</form>

<script>
    const categoryData = @Html.Raw(Json.Serialize(AnnouncementsBoard.Frontend.Constants.Categories.CategoryData));

    function populateSubcategories() {
        const category = document.getElementById("category").value;
        const subcategorySelect = document.getElementById("subcategory");

        subcategorySelect.innerHTML = '<option value="">-- Оберіть підкатегорію --</option>'; // Очищення підкатегорій

        if (category) {
            subcategorySelect.disabled = false; // Активувати
            subcategorySelect.innerHTML = '<option value="">-- Оберіть підкатегорію --</option>'; // Очищення списку

            categoryData[category]?.forEach(subcategory => {
                const option = document.createElement("option");
                option.value = subcategory;
                option.textContent = subcategory;
                subcategorySelect.appendChild(option);
            });
        } else {
            subcategorySelect.disabled = true; // Зробити неактивним
            subcategorySelect.innerHTML = '<option value="">-- Оберіть підкатегорію --</option>'; // Скинути значення
        }
    }
</script>

